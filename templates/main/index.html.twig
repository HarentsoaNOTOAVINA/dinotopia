{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Dinoâœ…</h1>

        <div class="container volcano mt-4" style="flex-grow: 1;">
            <div class="dino-stats-container mt-2 p-3">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Genus</th>
                        <th>Length</th>
                        <th>Enclosure</th>
                        <th>Accepting visitors</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for dino in dinos %}
                        <tr>
                            <td>{{ dino.name }}</td>
                            <td>{{ dino.genus }}</td>
                            <td>{{ dino.length }} | {{ dino.sizeDescription }}</td>
                            <td>{{ dino.enclosure }}</td>
                            <td>{{ dino.acceptingVisitors ? 'Yes' : 'No' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
